@using Reviews.ViewModels;
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>
        <div class="col-6 text-end">
                <a asp-controller="User" asp-action="Create"
                   class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp;
                    Create New User
                </a>
            </div>

    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.UserName</td>
                    <td>@obj.Email</td>
                    <td>
                        <div class=" btn-group" role="group">
                            <a asp-controller="User" asp-action="View"
                                asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-eye-fill"></i>
                                Edit
                            </a>
                        </div>
                        <div class=" btn-group" role="group">
                            <a asp-controller="User" asp-action="Edit"
                                asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                        </div>
                        <div class=" btn-group" role="group">
                            <a asp-controller="User" asp-action="Delete"
                                asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>