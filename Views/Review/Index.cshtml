@model IEnumerable<Review>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Reviews</h2>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col-6 text-end">
                <a asp-controller="Review" asp-action="Create" 
                    class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp;
                    Create New Review
                </a>
            </div>
        }
        
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Review Name</th>
                <th>Group</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td>@obj.Group</td>
                    <td>
                        <div>
                            @obj.CreatedAt
                        </div>
                        <div>
                            @obj.Likes
                        </div>
                        @if (User.Identity.IsAuthenticated && obj.AppUserId == User.GetUserId())
                        {
                            <div class=" btn-group" role="group">
                                <a asp-controller="Review" asp-action="Edit" 
                                    asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                            </div>
                            <div class=" btn-group" role="group">
                                <a asp-controller="Review" asp-action="Delete"
                               asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </a>
                            </div>
                        }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>