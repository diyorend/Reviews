@using Reviews.Data.Enum;
@using Reviews.ViewModels;
@model UpdateReviewViewModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <input hidden asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Review</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" ></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Group">Review Group</label>
            <select class="form-control" asp-for="Group" asp-items="@Html.GetEnumSelectList<Group>()">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="Group"></span>
        </div>
        <button type="submit" class="btn btn-primary"
                style="width:150px">
            Update
        </button>
        <a asp-controller="Review" asp-action="Index"
           class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
